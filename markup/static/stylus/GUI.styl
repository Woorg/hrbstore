// GUI stylies of the project
// For example, styles of the links, buttons and so on.


::-webkit-input-placeholder
	color #c2c2c2

:-moz-placeholder
	color #c2c2c2

::-moz-placeholder
	color #c2c2c2

:-ms-input-placeholder
	color #c2c2c2


a
	transition all .3s ease
	&:link,
	&:visited
		text-decoration none
	&:hover,
	&:active
		text-decoration underline


// Title

.title
	font-geom(60px,62px)
	&_v1
		color $white
	&_v2
		font-geobb(30px,32px)
		color $black
		text-transform uppercase
	&_v3
		font-geobb(30px,32px)
		color $white
		text-transform uppercase

// Buttons

.button
	padding-top 15px
	padding-left 66px
	padding-right 66px
	padding-bottom 14px
	min-height 60px
	display inline-block
	&_default
		background-color #27ae60
		color $white
		font-opbld(30px,32px)
		text-transform uppercase
		&:hover
			background-color #2ec86f
			text-decoration none
		&:active
			background-color #229653
			text-decoration none
	&_big
		padding-left 66px
		padding-right 66px
		width 100%
		background-color #27ae60
		color $white
		font-opbld(24px,1)
		text-transform uppercase
		text-align center
		&:hover
			background-color #2ec86f
			text-decoration none
		&:active
			background-color #229653
			text-decoration none



// Section

.section

	&_v1
		background $white
	&_v2
		background $black

.section__in
	position relative
	z-index 2

.section__w-w,
.about__w-w
	position relative
	&:before
		position absolute
		top -1px
		left -173px
		content ""
		bg($arrow_left)
		z-index 0
	&_v2
		&:before
			bg($arrow_left_2)
