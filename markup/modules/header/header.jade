mixin header(data)
	+b('header').header
		+e.in
			+b('a').logo(href='#top' title='HRB - МАГАЗИН УЛИЧНОЙ ОДЕЖДЫ') HRB

			+b('nav').nav
				+e('ul').list
					+e('li').item
						+e('a').link.mPS2id-highlight-first(href='#about' title='#') О МАГАЗИНЕ
					+e('li').item
						+e('a').link(href='#new' title='#') НОВИНКИ
					+e('li').item
						+e('a').link(href='#promo' title='#') ПРОМО
					+e('li').item
						+e('a').link(href='#gallery' title='#') INSTAGRAM
					+e('li').item
						+e('a').link(href='#links' title='#') ССЫЛКИ
					+e('li').item
						+e('a').link(href='#contacts' title='#') КОНТАКТЫ
